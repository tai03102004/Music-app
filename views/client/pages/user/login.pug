include ../../mixins/alert.pug


doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Spotify Log In Page
    link(rel="stylesheet", href="/css/login.css")
    link(rel="website icon" ,type = "png" ,href ="https://www.freepnglogos.com/uploads/spotify-logo-png/spotify-download-logo-30.png")

    link(rel="stylesheet", href="/css/alert.css")
    
  body
      header
        div.logo
          a(href="/")
            img(src="/images/spo-logo.png")
        div #{user}
      section
        div.main

          +alert-error(5000)
          +alert-success(5000)

          h1 Log in to Spotify

          div.account-connect
            button.a-c-btn(id="g")
              img(src="/images/google.png")
              span Continue with Google
            button.a-c-btn(id="f")
              img(src="/images/facebook.png")
              span Continue with Facebook
            button.a-c-btn(id="a")
              img(src="/images/apple.png")
              span Continue with Apple

          hr

          div.log-in
            form(action="/user/login", method="POST")
              label Email or username
              input(type="text", placeholder="Email or username",name="userName")

              label Password
              input(type="password", placeholder="Password",name="password")

              div.switch
                input(type="checkbox", id="switch", checked)
                label(for="switch")
                span Remember me

              button(type="submit") Log In

              a(href="#") Forgot your password?

          hr

          div.last
            span Don't you have an account?
            a(href="/user/signup") Sign up for Spotify
  script(src="/js/alert.js")
